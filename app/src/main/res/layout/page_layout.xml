<?xml version="1.0" encoding="utf-8"?>

<com.pashkov.sexcubefull.view_pager.PageLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <com.pashkov.sexcubefull.view_pager.ForegroundLinearLayout
        android:id="@+id/page_content"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:clickable="true">

        <LinearLayout
            android:id="@+id/LinerPolosaVerh"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:focusable="false"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearPozaOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPoza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_margin="5dp"
                    android:text="Large Text"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="20dp" />

                <CheckBox
                    android:id="@+id/checkBoxPozaOk"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="?android:attr/listChoiceIndicatorMultiple"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="right" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/LinerPolosa0"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:focusable="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgPozaView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="20sp"
            android:visibility="invisible"
            tools:text="Title" />

    </com.pashkov.sexcubefull.view_pager.ForegroundLinearLayout>

</com.pashkov.sexcubefull.view_pager.PageLayout>